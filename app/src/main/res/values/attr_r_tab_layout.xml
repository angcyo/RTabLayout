<?xml version="1.0" encoding="utf-8"?>
<resources>
    <attr name="r_indicator_type" format="enum">
        <enum name="TYPE_NONE" value="0"/>
        <enum name="TYPE_BOTTOM_LINE" value="1"/>
        <enum name="TYPE_ROUND_RECT_BLOCK" value="2"/>
    </attr>

    <!--自定义Drawable, 同样受到r_indicator_type的影响, 决定了bounds-->
    <attr name="r_indicator_drawable" format="reference"/>
    <attr name="r_indicator_color" format="color"/>
    <attr name="r_indicator_width" format="dimension"/>
    <attr name="r_indicator_height" format="dimension"/>
    <attr name="r_indicator_offset_width" format="dimension"/>
    <attr name="r_indicator_offset_height" format="dimension"/>
    <attr name="r_indicator_round_size" format="dimension"/>

    <attr name="r_indicator_enable_anim" format="boolean"/>
    <attr name="r_indicator_enable_anim_overshoot" format="boolean"/>

    <!--等宽-->
    <attr name="r_item_equ_width" format="boolean"/>

    <!--绘制边框-->
    <attr name="r_border_show" format="boolean"/>
    <attr name="r_border_color" format="color"/>
    <attr name="r_border_fill_color" format="color"/>
    <!--<attr name="r_border_width" format="dimension" />-->
    <attr name="r_border_round_size" format="dimension"/>

    <declare-styleable name="RDrawBorder">
        <attr name="r_border_show"/>
        <attr name="r_border_width"/>
        <attr name="r_border_color"/>
        <attr name="r_border_fill_color"/>
        <attr name="r_border_round_size"/>
    </declare-styleable>

    <declare-styleable name="RTabIndicator">
        <attr name="r_indicator_type"/>
        <attr name="r_indicator_drawable"/>
        <attr name="r_indicator_color"/>
        <attr name="r_indicator_width"/>
        <attr name="r_indicator_height"/>
        <attr name="r_indicator_offset_y"/>
        <attr name="r_indicator_offset_width"/>
        <attr name="r_indicator_offset_height"/>
        <attr name="r_indicator_round_size"/>
        <attr name="r_indicator_enable_anim"/>
        <attr name="r_indicator_enable_anim_overshoot"/>
    </declare-styleable>

    <declare-styleable name="RTabLayout">
        <!--首次设置tabLayoutListener时, 是否通知回调-->
        <attr name="r_first_notify_listener" format="boolean"/>
        <attr name="r_item_equ_width"/>
        <attr name="r_current_item" format="integer"/>

        <attr name="r_indicator_drawable"/>
        <attr name="r_indicator_type"/>
        <attr name="r_indicator_color"/>
        <attr name="r_indicator_width"/>
        <attr name="r_indicator_height"/>
        <attr name="r_indicator_offset_y"/>
        <attr name="r_indicator_offset_width"/>
        <attr name="r_indicator_offset_height"/>
        <attr name="r_indicator_round_size"/>
        <attr name="r_indicator_enable_anim"/>
        <attr name="r_indicator_enable_anim_overshoot"/>

        <attr name="r_border_show"/>
        <attr name="r_border_fill_color"/>
        <attr name="r_border_color"/>
        <attr name="r_border_width"/>
        <attr name="r_border_round_size"/>
    </declare-styleable>

    <declare-styleable name="RTabLayout_Layout">
        <attr name="r_layout_width"/>
        <attr name="r_layout_height"/>
    </declare-styleable>
</resources>